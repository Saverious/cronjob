  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Saverious/cronjob/issues"
  },
  "homepage": "https://github.com/Saverious/cronjob#readme",
  "devDependencies": {
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.9"
  }
}
