{
    "compilerOptions": {
      "outDir": "dist",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ESNext",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": false,
      "allowImportingTsExtensions": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  